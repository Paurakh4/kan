{
  "version": 2,
  "buildCommand": "NEXT_PUBLIC_USE_STANDALONE_OUTPUT=false pnpm --filter @kan/web build",
  "outputDirectory": "apps/web/.next",
  "installCommand": "pnpm install --frozen-lockfile",
  "framework": "nextjs",
  "env": {
    "NEXT_PUBLIC_USE_STANDALONE_OUTPUT": "false"
  },
  "functions": {
    "apps/web/src/pages/api/**/*.ts": {
      "runtime": "nodejs18.x",
      "maxDuration": 30
    }
  },
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/$1"
    }
  ]
}
